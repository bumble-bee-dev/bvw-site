---
const isDev = import.meta.env.DEV;
const basePath = isDev ? "/bvw-site" : ""
---

<header>

    <h1 class="headerTitle">Ballater Victoria Week</h1>
    <div class="headerContent">
        <p class="headerDate">9th - 17th Aug 2025</p>

        <button class="menu-toggle" onclick="toggleMenu()">â˜°</button>

        <nav class="menu">+
            <a href={`${basePath}/`}>Home</a>
            <a href={`${basePath}/news/`}>News</a>
            <a href={`${basePath}/events/DuckRace/`}>Events</a>  <!-- TODO: change path when Events page is made -->
            <a href={`${basePath}/parade/`}>Parade</a>
            <a href={`${basePath}/scarecrows/`}>Scarecrows</a>
            <a href={`${basePath}/ducks/`}>Ducks</a>
            <a href={`${basePath}/contactUs/`}>Contact Us</a>
        </nav>
    </div>
    <script client:load>
        function toggleMenu() {
            document.querySelector('.menu').classList.toggle('open');
        }
    </script>

    <style>
        header, .headerContent {
            background-color: var(--bvw-dark-purple);
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            gap: 4%;
            padding: 0 1rem 0 1rem;
        }

        .headerContent {
            width: 60%;
        }

        .menu {
            display: flex;
            gap: 1rem;
        }

        h1, p, a {
            color: var(--off-white);
        }

        .menu-toggle {
            display: none;
            background: none;
            border: none;
            font-size: 2rem;
            color: white;
            cursor: pointer;
        }

        @media (max-width: 1100px) {
            .menu-toggle {
                display: block;
            }

            .headerContent {
                width: 50%;
            }

            .menu {
                flex-direction: column;
                display: none;
                position: absolute;
                top: 85px;
                background-color: var(--bvw-dark-purple);
                width: 100%;
                padding: 10px;

            }

            .menu.open {
                display: flex;
            }
        }

        @media (max-width: 800px) {
            header {
                flex-direction: column;
            }

            .menu {
                top: 135px
            }

        }


    </style>
</header>
