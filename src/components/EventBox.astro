---
import {format} from "date-fns";
import {getEntry} from "astro:content";
const {eventId} = Astro.props;
const event = await getEntry("events", eventId);
let showReadMore = "display:none;";

if (!event || !event.rendered) {throw Error("No event found for eventId: " + eventId);}
if (event.rendered.html.length > 500) {
    showReadMore = "display:inline;";
}

---

<div class="eventBox flex flex-col gap-4">
    <h1>{event.data.title}</h1>
    <div class="eventDetails">
        <div class="eventParam">
            <h3>Start time: </h3>
            <p>{format(new Date(event.data.start), 'E do h:mma')}</p>
        </div>
        <div class="eventParam">
            <h3>Location: </h3>
            <p>{event.data.location}</p>
        </div>
        <div class="eventParam">
            <h3>Price: </h3>
            <p>{event.data.price}</p>
        </div>
    </div>
    <div class="mainText" set:html={event.rendered.html}></div>
    <!--
    <a class="readMore" href="/events" style={showReadMore}>Read<br>More</a>
    -->
</div>

<style lang="scss">
  .eventBox {
    container-type: inline-size;
    position: relative;
    align-items: center;
    padding: 1rem;
    background: var(--primary-main-colour);
    border-radius: 1rem;
    border: 0.2rem solid var(--secondary-main-colour);
    box-shadow: 0 0 0 0.5rem var(--primary-main-colour), 1.2rem 1.1rem 0 0 var(--primary-accent-colour);

  }

.mainText {
  max-height: 13rem;
  overflow: hidden;
  overflow-block: hidden;
}
  .eventDetails {
    display: flex;
    justify-content: space-between;
  }

  .eventParam {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  p,h3 {
    margin: 0;
  }
  .readMore {
    position: absolute;
    background: var(--bvw-light-purple);
    right: 1rem;
    bottom: -2rem;
    border: 1rem solid var(--bvw-light-purple);
    border-radius: 10rem;
  }

  @container (width < 40rem) {
    .eventParam {
      flex-direction: column;
    }
  }
  @container (width < 20rem) {
    .eventParam {
      flex-direction: row;
      margin: 0;
    }
    .eventDetails {
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
  }
</style>
