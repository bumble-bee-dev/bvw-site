---
const isDev = import.meta.env.DEV;
const basePath = isDev ? "/bvw-site" : ""
const {isDesktop} = Astro.props;
let deviceType = "nav-links " + isDesktop;
---

<div class={deviceType}>
    <a href={`${basePath}/`}>Home</a>
    <a href={`${basePath}/news/`}>News</a>
    <a href={`${basePath}/events`}>Events</a>
    <a href={`${basePath}/parade/`}>Parade</a>
    <a href={`${basePath}/scarecrows/`}>Scarecrows</a>
    <a href={`${basePath}/events/duckrace/`}>Ducks</a>
    <a href={`${basePath}/contactUs/`}>Contact Us</a>
</div>

